  output (uinput-sink "KMonad kbd"))

(defalias
 mov (tap-next esc (layer-toggle movement)))

(defsrc
  esc  f1   f2   f3   f4   f5   f6        f7   f8   f9   f10  f11  f12  del
  grv  1    2    3    4    5    6         7    8    9    0    -    =    bspc  
